<%- include('../partials/header'); %>

    <div class="dashboard">
        <div class="icon">
            <i class='bx bxl-xing'></i>
            <div class="icon1">
                <a href=" ">View Site<i class='bx bx-chevron-down'></i> </a>
                <a href=" ">Log out </a>
            </div>

        </div>
        <div class="dash">
            <div class="home">
                <div class="hp">
                    <h2>All Categories</h2>
                    <p>Home / Categories</p>
                </div>
                <div class="hp-1">
                    <a id="Admin" href="/addnewproduct"><i class="fa-solid fa-user"></i> Admin</a>
                </div>

            </div>
            <div class="cat">
                <div class="left-cat">
                    <div class="all">
                        <h2>All Category</h2>
                        <div class="select-box-wrap">
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Bulk option</option>
                                <option value="1">Delete</option>
                            </select>
                            <button type="button" class="btn btn-primary">Apply</button>
                        </div>
                        <div class="datatable">

                        </div>
                        <div class="row">
                            <dov class="col-12">
                                <table id="example" class="display" style="width:100%">
                                    <thead style="background-color: #0A2558; color:white;">
                                        <tr>
                                            <td><input type="checkbox" style="margin-left: 15px; "></t>
                                            <td style="padding: 10px;">id</td>
                                            <td>Name</td>
                                            <td>Status</td>
                                            <td>Category type</td>
                                            <td style="padding-left: 13px;">image</td>
                                            <td>Action</td>
                                        </tr>
                                    </thead>
                                    <tbody style="padding: 10px;">

                                        <% if(sampleData.length>0){
                                            sampleData.forEach(function(data){
                                            %>

                                            <tr>
                                                <td style="padding: 10px;"><input type="checkbox"></td>
                                                <td style="padding: 10px;">
                                                    <%=data.id %>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <%=data.name %>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <%=data.status %>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <%=data.categorytype %>
                                                </td>
                                                <td style="padding: 10px;"> <img src="<%=data.image %> "
                                                        style="height: 100px ;width: 100px; " alt="image"> </td>
                                                <td style="padding: 10px;">
                                                    <!-- <button type="button" class="btn btnDelete btn-danger"><i class='bx bx-message-square-x'></i></button> -->
                                                    <a href="/products/categories/delete/<%= data.id %>"
                                                        class="btn btn-danger"><i
                                                            class='bx bx-message-square-x'></i></a>
                                                    <a href="/products/categories/edit/<%= data.id %>"
                                                        class="btn btn-primary"><i class='bx bxs-edit-alt'></i></a>
                                                    <!-- <button type="submit" class="btn btn-primary" ><i class='bx bxs-edit-alt'></i></button> -->
                                                </td>
                                            </tr>
                                            <% }) } else{ %>
                                                <tr>

                                                    <td colspan="5">No Data Found</td>
                                                </tr>
                                                %>
                                                <% } %>
                                    </tbody>

                                </table>

                                <div class="pagination">
                                    <ul class="pagination justify-content-center">

                                    </ul>
                                </div>
                        </div>
                    </div>

                    <div class="right-cat">
                        <div class="new-cat">
                            <h3>Add New Categories</h3>
                        </div>
                        <form action="/products/categories" method="POST">
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Name</label>
                                <input type="text" class="form-control" name="name" id="exampleFormControlInput1"
                                    placeholder="Name" style="width: 450px;">
                            </div>
                            <div class="name">
                                <label for="exampleFormControlTextarea1" class="form-label"
                                    style="width: 100%;">Category Type</label>
                                <select class="form-select" name="categorytype" aria-label="Default select example"
                                    style="width: 100%;">
                                    <option selected>Select Category</option>
                                    <option>Top rated Category</option>
                                    <option>Category-2</option>
                                    <option>Category-3</option>
                                </select>

                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Slugs</label>
                                <input type="text" class="form-control" name="slug" id="exampleFormControlInput1"
                                     style="width: 450px;">
                            </div>
                            

                            <div class="name">
                                <label for="exampleFormControlInput" class="form-label">Tags</label>
                                <input type="text" name="tags" class="form-control" id="exampleFormControlInput1"
                                    placeholder="tags">
                            </div>

                            <div class="name">
                                <script type="text/javascript"
                                    src="node_modules/froala-editor/js/froala_editor.pkgd.min.js"></script>
                                <label for="exampleFormControlInput" class="form-label">Category Description</label>

                                <!-- <textarea id="txtarea"></textarea> -->
                                <!-- <input type="button" id="btnValue" value="Get Value" /> -->
                                <!-- <textarea id="defaultRTE" required name="description" class="form-control"></textarea> -->
                                <!-- <textarea class="mytextarea">Hello, World!</textarea> -->
                                <textarea id="editor" class="form-control" name="description" rows="9"></textarea>
                            </div>

                            <div class="name">
                                <label for="exampleFormControlInput" class="form-label" style="width: 100%;">Tags
                                    Keywords</label>
                                <input type="text" style="width: 20%;" name="Keywords"> ,
                                <input type="text" style="width: 20%;" name="Keywords"> ,
                                <input type="text" style="width: 20%;" name="Keywords"> ,
                                <input type="text" style="width: 20%;" name="Keywords">
                            </div>
                            <div class="name" style="display: flex;
                            flex-direction: column;">
                                <label for="exampleFormControlTextarea1" class="form-label"
                                    style="margin-top: 20px;">Image</label>
                                <!-- <button type="file" class="btn btn-info">Upload Image</button> -->
                                <input type="file" name="image">
                                <h7 style="margin-top: 10px;">Recommended image size is 200x200</h7>
                                <label for="exampleFormControlTextarea1" class="form-label">Status</label>
                                <select class="form-select" aria-label="Default select example" name="status">
                                    <option selected>Publish</option>
                                    <option>Draft</option>
                                </select>
                                <button class="btn-new" type="submit">Add New</button>
                            </div>

                    </div>
                    </form>


                </div>

                <script type="text/javascript" charset="utf8"
                    src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
                <script type="text/javascript" charset="utf8"
                    src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
                <script>
                    $(function () {
                        $("#example").dataTable();
                    })
                </script>



