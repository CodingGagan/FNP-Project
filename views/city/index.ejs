<%- include('../partials/header'); %>
    <div class="dashboard">
        <div class="icon">
            <i class='bx bxl-xing'></i>
            <div class="icon1">
                <a href=" ">View Site<i class='bx bx-chevron-down'></i> </a>
                <a href=" ">Log out </a>
            </div>

        </div>
        <div class="dash">
            <div class="home">
                <div class="hp">
                    <h2 style="margin-left: 10px;">privacy</h2>
                    <p>Home / Region Management</p>
                </div>
                <div class="hp-1">
                    <a id="Admin" href=""><i class="fa-solid fa-user"></i> Admin</a>
                </div>

            </div>
            <div class="cat">
                <div class="left-cat">
                    <div class="all">
                        <h2>All Region</h2>


                        <div class="row">
                            <dov class="col-12">
                                <table id="example" class="display" style="width:100%">
                                    <thead style="background-color: #0A2558; color:white;">
                                        <tr>
                                            <td><input type="checkbox" style="margin-left: 15px; "></td>
                                            <td style="padding: 10px; margin-left: 15px;">id</td>
                                            <td style="padding: 10px; margin-left: 15px;">Name</td>
                                            <td style="padding: 10px; margin-left: 15px;">Action</td>
                                           
                                            
                                        </tr>
                                    </thead>
                                    <tbody style="padding: 10px;">
                                        <% if(sampleData.length>0){
                                            sampleData.forEach(function(data){
                                            %>

                                            <tr>
                                                <td style="padding: 10px;"><input type="checkbox"></td>
                                                <td style="padding: 10px;">
                                                    <%=data.id %>
                                                </td>
                                                <td style="padding: 10px; margin-left: 15px;">
                                                    <%=data.region %>
                                                </td >
                                                <td style="padding: 10px; margin-left: 15px;">
                                                     <!-- <button type="button" class="btn btnDelete btn-danger"><i class='bx bx-message-square-x'></i></button> -->
                                                     <a href="/citymanagement/delete/<%= data.id %>"
                                                        class="btn btn-danger"><i
                                                            class='bx bx-message-square-x'></i></a>
                                                    <a href="/citymanagement/edit/<%= data.id %>"
                                                        class="btn btn-primary"><i class='bx bxs-edit-alt'></i></a>
                                                </td>
                                                
                                                
                                                </tr>

                                                <% }) } else{ %>
                                                    <tr>
    
                                                        <td colspan="5">No Data Found</td>
                                                    </tr>
                                                    %>
                                                    <% } %>
                                        </tbody>
                                    </table>
                        </div>
                    </div>

                    <div class="right-cat">
                        <div class="new-cat">
                            <h3>All Region</h3>
                        </div>

                        <form action="/citymanagement" method="Post">
                            <div class="name" >
                                <label for="exampleFormControlTextarea1" class="form-label">Select Region</label>
                                <input type="text" class="form-control" style="width: 100%; margin: 15px; padding: 5px;" name="region" id="exampleFormControlInput1"
                                    placeholder="Name" style="width: 450px;">
                            </div>
                            
                          
                          
                            <div class="mb-3">
                               
                                <button class="btn-new" type="submit">Submit</button>
                            </div>
                    </div>
                    </form>
                </div>

                <!-- <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js"
        referrerpolicy="origin"></script> -->

                <!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> -->
