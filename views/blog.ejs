<%- include('./partials/header'); %>
    <div class="dashboard">
        <div class="icon">
            <i class='bx bxl-xing'></i>
            <div class="icon1">
                <a href=" ">View Site<i class='bx bx-chevron-down'></i> </a>
                <a href=" ">Log out </a>
            </div>

        </div>
        <div class="dash">
            <div class="home">
                <div class="hp">
                    <h2>Blogs</h2>
                    <p>Home / Blogs Items</p>
                </div>
                <div class="hp-1">
                    <a id="Admin" href=""><i class="fa-solid fa-user"></i> Admin</a>
                </div>
            </div>
        </div>
        <div class="all">
            <h2>All Blogs Items</h2>
            <div class="select-box-wrap">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Bulk option</option>
                    <option value="1">Delete</option>
                </select>
                <button type="button" class="btn btn-primary">Apply</button>
                <a href="/addblogpost"  class="btn btn-primary" style="margin-left: 1000px;">Add Blog Post</a>
               
            </div>
            
            <div class="datatable">
                

            </div>
            <div class="row">
                <div class="col-12">
                    <table id="example" class="display" style="width:100%">
                        <thead style="background-color: #0A2558;color:white;">
                            <tr>
                                <td><input type="checkbox" style="margin-left: 15px; "></t>
                                <td style="padding:15px;">id</td>
                                <td>title</td>
                                <td>categories</td>
                                <td>BLOG image</td>
                                <td>Og image</td>
                                <td>Status</td>
                               
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(sampleData.length>0){
                                sampleData.forEach(function(data){
                                %>
                            <tr>
                                <td><input type="checkbox" style="margin-left: 15px; "></td>
                                <td style="padding:15px;"> <%=data.id %></td>
                                <td>
                                    <h6 style="margin-top: 10px;"> <%=data.title %></h6></td>
                                <td><%=data.blogpage %></td>
                                <td>
                                    <img src="<%=data.bimage %> " style="height: 100px ;width: 100px; " alt="bimage">
                                </td>
                                
                                <td>
                                    <img src="<%=data.ogimage %> " style="height: 100px ;width: 100px;  margin-top: 10px;" alt="ogimage">
                                </td>
                                
                                <td>
                                    <span class="alert alert-warning"><%=data.status %></span>
                                
                                </td>
                                
                                <td>
                                    <a href="/addblogpost/Delete/<%= data.id %>"  class="btn btn-danger" ><i class='bx bx-message-square-x'></i></a> 
                                    <a href="/addblogpost/edit/<%= data.id %>"  class="btn btn-primary editSelect" ><i class='bx bxs-edit-alt'></i></a>
                                </td>
                            </tr>
                            <%
                                })
                            } 
                            else{
                            %>
                                <tr>
                                    
                                    <td colspan="5">No Data Found</td>
                                </tr>
                            %> 
                            <%   
                            }
                            %>  
                        </tbody>

                    </table>
                </div>
            </div>


        </div>




        
        <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
  <script>
  $(function(){
    $("#example").dataTable();
  })
  </script>
        <%- include('./partials/footer'); %>