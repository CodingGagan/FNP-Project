            <a href=" ">View Site<i class='bx bx-chevron-down'></i> </a>
            <a href=" ">Log out </a>
        </div>

    </div>
        <div class="dash">
            <div class="home">
                <div class="hp">
                    <h2>All Ticket</h2>
                <p>Home / All Ticket</p>
                </div>
                <div class="hp-1">
                    <a id="Admin" href=""><i class="fa-solid fa-user"></i> Admin</a>
                </div>
               
            </div>    
           
        </div>
        <div class="all">
            <h2>All Ticket</h2>
        <div class="select-box-wrap">
            <select class="form-select" aria-label="Default select example">
                    <option selected>Bulk option</option>
                    <option value="1">Delete</option>
            </select>
            <button type="button" class="btn btn-primary">Apply</button>
    </div>
    <div class="datatable">
          

    </div>
		<div class="row">
				<div class="col-12">
						<table id="example" class="display" style="width:100%">
								<thead style="background-color: #0A2558; color:white;">
										<tr >
												<th style="width:10%;padding: 10px;"><input type="checkbox" style="margin-left: 10px; "></th>
												<th style="width:10%;padding: 10px;">id</th>
												<th style="width:10%;padding: 10px;">Title</th>
												<th style="width:15%;padding: 10px;">Department</th>
												<th style="width: 15%;padding: 10px;">Priority</th>
                                                <th style="width: 15%;padding: 10px;">Status</th>
                                                <th style="width: 15%;padding: 10px;">Action</th>
										</tr>
    
								</thead >

                            <tbody>

                                
                            <%
                            if(sampleData.length >0){
                                sampleData.forEach(function(data){                                  
                                    %>
                                    <tr>
                                        <td style="padding: 10px;"><input type="checkbox" ></td>
                                        <td style="padding: 10px;"><%=data.id %></td>
                                        <td style="padding: 10px;"><%=data.title %></td>
                                        <td style="padding: 10px;"><%=data.department %></td>
                                        <td style="padding: 10px;"><%=data.priority %></td>
                                        <td style="padding: 10px;"  ><%=data.status %></td>
                                        <td style="padding: 10px;">
                                            <%=data.action %>
                                        </td>
                                    </tr>
                                    <%
                                })
                            } 
                            else{
                            %>
                                <tr>
                                    
                                    <td colspan="5">No Data Found</td>
                                </tr>
                            %> 
                            <%   
                            }
                            %>                                
                            </tbody>
                               
                            <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
                            <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
                            <script>
                            $(function(){
                              $("#example").dataTable();
                            })
                            </script>
                               
