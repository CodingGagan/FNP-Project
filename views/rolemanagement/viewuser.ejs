        <div class="all">
            <h2>View Coustomer</h2>
            <div class="select-box-wrap">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Bulk option</option>
                    <option value="1">Delete</option>
                </select>
                <button type="button" class="btn btn-primary">Apply</button>
                <a href="/adduser" class="btn btn-primary" style="margin-left: 1150px; padding: 10px 25px;">Add Coustomer</a>

            </div>
        </div>
        <div class="row" style="margin-top: 25px;">
            <div class="col-12">
                <table id="example" class="display mt-5" style="width:100%">
                    <thead style="background-color: #0A2558;color:white; height: 3rem;">
                        <tr>
                            <td><input type="checkbox" style="margin-left: 15px; "></t>
                            <td>image</td>
                            <td>User Name</td>
                            <td>Status</td>
                            
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>

                        <%
                        if(sampleData.length >0){
                            sampleData.forEach(function(data){                                  
                                %>
                                <tr>
                                    <td style="padding: 10px;"><input type="checkbox" ></td>
                                    <td style="padding: 10px;"><img src="<%=data.image %> " style="height: 100px ;width: 100px; " alt="image"> </td>
                                    <td style="padding: 10px;"><%=data.username %></td>
                                    <td style="padding: 10px;"><%=data.status %></td>
                                    <td style="padding: 10px;">
                                        <a href="/rolemanagement/viewuser/delete/<%= data.id %>"  class="btn btn-danger" ><i class='bx bx-message-square-x'></i></a> 
                                        <a href="/rolemanagement/viewuser/edit/<%= data.id %>"  class="btn btn-primary" ><i class='bx bxs-edit-alt'></i></a>
                                        <!-- <button type="button" class="btn btnDelete btn-danger"><i class='bx bx-message-square-x'></i></button>
                                        <a href="/adduser" class="btn btn-primary"><i class='bx bxs-edit-alt'></i></a> -->
                                        
                                    </td>
                                </tr>
                                <%
                            })
                        } 
                        else{
                        %>
                            <tr>
                                
                                <td colspan="5">No Data Found</td>
                            </tr>
                        %> 
                        <%   
                        }
                        %>                           
                    </tbody>                    
                </table>
            </div>
        </div>

    </div>

    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
